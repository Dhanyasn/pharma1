					<label>phone no</label><input style="margin-left: 10px" type="number" class="form-control" name="staff_phone" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" maxlength="10" value="<%=item.staff_phone%>">
					<button type="submit" >submit</button>
					
				</form>
				<%}); %>
			</div >
			<%}%>

<!-- order -->
  <%if(info=="order"){%>
			<div class="forms">
