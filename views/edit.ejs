					<button type="submit" >submit</button>
					
				</form>
				<%}); %>
			</div >
			<%}%>

<!-- deliver -->
<%if(info=="deliver"){%>
			<div class="forms">
				<% rs.forEach(function(item){%>
				<form method="post" action="/deliverEdit/<%=item.deliver_id%>"  class="form-group">
					
					<label>deliver</label>
					<label>  id</label><input style="margin-left: 10px" type="text" class="form-control" name="deliver_id" maxlength="5" value="<%=item.deliver_id%>">
					
					<label> order_id</label><input style="margin-left: 10px" type="text" class="form-control" name="order_id" maxlength="5" value="<%=item.order_id%>">

					<label> price</label><input style="margin-left: 10px" type="number" class="form-control" name="total_price" maxlength="30" value="<%=item.total_price%>">
					
					<button type="submit" >submit</button>
					
				</form>
				<%}); %>
			</div >
			<%}%>
<!-- discount -->
<%if(info=="discount"){%>
			<div class="forms">
				<% rs.forEach(function(item){%>
				<form method="post" action="/discountEdit/<%=item.discount_id%>"  class="form-group">
					
					<label>discountr</label>
					<label>  id</label><input style="margin-left: 10px" type="text" class="form-control" name="discount_id" maxlength="5" value="<%=item.discount_id%>">
					
					<label> products_id</label><input style="margin-left: 10px" type="text" class="form-control" name="products_id" maxlength="5" value="<%=item.products_id%>">

